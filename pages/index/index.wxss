/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.tab-container .tab-head {
	display: flex;
	justify-content: space-between;
}

.tab-head .head {
	text-align: center;
	flex: 1;
	padding: 20rpx 0;
	font-size: 26rpx;
	background: #f0f0f0;
	border-bottom: 2px solid #ddd;
}

.tab-head .head.active {
	border-bottom: 2px solid #f80;
}

.swiper {
	display: block;
	width: 100%;
	height: 100%;
	overflow: hidden;
}

.swiper-item {
	overflow: scroll;
}

.nav-btn {
	width: 24px;
	height: 24px;
	margin: 10rpx;
}

.page-bottom {
	background: #9d55b8;
	color: #fff;
	font-size: 28rpx;
	position: absolute;
	top: 0;
	left: 0;
	z-index: 0;
	width: 100%;
	height: 100%;
	overflow: scroll;
}

.page-bottom .nav {
	padding: 30rpx;
}

.page-bottom .head {
	background: #9d00b8;
	padding: 40rpx;
}

.page-top {
	background: #f0f0f0;
	width: 100%;
	height: 100%;
	position: absolute;
	top: 0;
	left: 0;
	z-index: 1;
	transition: all 0.5s;
	-webkit-transition: all 0.5s;
}

.open {
	transform: translate(60%, 0%);
	-webkit-transform: translate(60%, 0%);
}

.open1 {
	transform: rotate(0) scale(0.8) translate(60%, 0);
}
.section {
	padding: 20rpx;
}

video {
	width: 100%;
}





