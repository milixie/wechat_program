/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.tab-container .tab-head {
	display: flex;
	justify-content: space-between;
}

.tab-head .head {
	text-align: center;
	flex: 1;
	padding: 20rpx 0;
	font-size: 26rpx;
	background: #f0f0f0;
	border-bottom: 2px solid #ddd;
}

.tab-head .head.active {
	border-bottom: 2px solid #f80;
}

.swiper {
	display: block;
	width: 100%;
	height: 100%;
	overflow: hidden;
}

.swiper-item {
	overflow: scroll;
}
